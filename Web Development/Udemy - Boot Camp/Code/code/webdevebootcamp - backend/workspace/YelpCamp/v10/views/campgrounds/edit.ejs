<% include ../partials/header %>


<div class='container'>
	<div class='row'>
		<h1 style='text-align: center;'>Edit <%=campground.name%></h1>
		<div style='width: 30%; margin: 30px auto;'>
			<form method="POST" action="/campgrounds/<%= campground._id %>/?_method=PUT" >
				<div class='form-group'>
					<input class='form-control' type="text" name="name" placeholder="Camp Ground Name" value="<%=campground.name%>">
				</div>				
				<div class='form-group'>
					<input class='form-control'type="text" name="image" placeholder="Image URL" value="<%=campground.image%>">
				</div>		
				<div class='form-group'>
					<input class='form-control'type="text" name="description" placeholder="Enter a brief Description"  value="<%=campground.description%>">
				</div>	
				<div class='form-group'>
					<button class='btn btn-large btn-primary btn-block'>Update Campground Details</button>
				</div>
			</form>
			<a href="/campgrounds/<%= campground._id %>">Go Back</a>
		</div>
	</div>
</div>


<% include ../partials/footer %>