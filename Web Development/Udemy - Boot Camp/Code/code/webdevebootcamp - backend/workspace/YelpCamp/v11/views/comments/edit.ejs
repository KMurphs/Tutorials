<% include ../partials/header %>



<div class='container'>
	<div class='row'>
		<h1 style='text-align: center;'>Edit Comments to</h1>
		<h1 style='text-align: center;'> <%= campground.name %> campground</h1>
		<h4 style='text-align: center; padding-top: 20px;'>by <strong><em> <%= comment.author.username %> </strong></em></h4>
		<div style='width: 30%; margin: 30px auto;'>
			<form method="POST" action="/campgrounds/<%= campground._id %>/comments/<%= comment._id %>/?_method=PUT" >
				<!--<div class='form-group'>-->
				<!--	<input class='form-control' type="text" name="comment[author]" placeholder="Your name">-->
				<!--</div>				-->
				<div class='form-group'>
					<input class='form-control'type="text" name="text" value='<%= comment.text %>'>
				</div>	
				<div class='form-group'>
					<button class='btn btn-large btn-primary btn-block'>Update Comment</button>
				</div>
			</form>
			<a href="/campgrounds/<%= campground._id %>/">Go Back</a>
		</div>
	</div>
</div>


<% include ../partials/footer %>